<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookCatalog.View.AuthorizationPage">
    <ContentPage.Content>
        <StackLayout >
            <Label Text="Login" FontSize="Medium"/>
            <Entry Text="{Binding Login}" FontSize="Medium"/>
            <Label Text="Password" FontSize="Medium"/>
            <Entry Text="{Binding Password}" IsPassword="True" FontSize="Medium"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Enter" Command="{Binding EnterCommand}"/>
                <Button Text="Register" Command="{Binding RegisterCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>